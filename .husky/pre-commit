#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run lint-staged
npx lint-staged

# Run TypeScript type checking
echo "🔧 Running TypeScript type checking..."
npm run typecheck

# Run tests
echo "🧪 Running tests..."
npm run test

echo "✅ Pre-commit checks completed successfully!"
